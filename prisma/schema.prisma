generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  ToDoRecord ToDoRecord[]
}

model ToDoRecord {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  body   String // maps to text db type
}
